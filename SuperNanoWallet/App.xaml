<Application x:Class="SuperNanoWallet.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SuperNanoWallet"
             StartupUri="LoginWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="AccentColour" Color="#4b90e2"/>
        <SolidColorBrush x:Key="AccentColour2" Color="#ea881f"/>
        <SolidColorBrush x:Key="AccentColourBackground" Color="#0f1121"/>
        <FontFamily x:Key="Nunito">pack://application:,,,/Resources/#Nunito</FontFamily>
        <Style TargetType="{x:Type Window}">
            <Setter Property="FontFamily" Value="{StaticResource Nunito}" />
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{StaticResource AccentColour}" />
            <Setter Property="BorderBrush" Value="White"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
        </Style>
    </Application.Resources>
</Application>
